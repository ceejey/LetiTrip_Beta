<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ehealth.project.letitrip.view.fragment.configuration.General"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgTouch"
                android:src="@drawable/ic_touch_app_white_24dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:layout_column="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="Touchempfindlichkeit Navigationsbar"
                android:id="@+id/textView9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="Stark"
                android:id="@+id/textView10"
                android:layout_weight="0.3"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="Mittel"
                android:id="@+id/textView11"
                android:layout_weight="0.3"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="Schwach"
                android:id="@+id/textView12"
                android:layout_weight="0.3"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sbrTouchSensibility"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:indeterminate="false"
            android:thumbTint="#5c6bc0"
            android:progressTint="#5c6bc0" />

        <View
            android:id="@+id/linearLayoutHeader4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgUpdate"
                android:src="@drawable/ic_file_download_white_24dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:layout_column="7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rezepte aktualisieren"
                android:id="@+id/btnUpdateRecipes"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="#5c6bc0"/>

        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zuletzt aktualisiert: "
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/txtUpdated"
        android:fontFamily="sans-serif"
        android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUpdateDate"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="50dp" />

        <View
        android:id="@+id/linearLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgResetActScore"
            android:src="@drawable/ic_restore_white_24dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activityscore zur체cksetzen"
            android:id="@+id/btnResetActScore"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="#5c6bc0" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setze den Activityscore komplett zur체ck und fange von neu an. Als ob es nie einen schlechten Tag gegeben h채tte!"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/txtResetAct"
        android:fontFamily="sans-serif"
        android:textSize="14sp" />

    <View
        android:id="@+id/linearLayoutHeader2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgResetApp"
            android:src="@drawable/ic_build_white_24dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App zur체cksetzen"
            android:id="@+id/btnResetApp"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="#5c6bc0" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macht die App mal wieder Probleme?"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/txtResetApp"
        android:fontFamily="sans-serif"
        android:textSize="14sp" />

    <View
        android:id="@+id/linearLayoutHeader3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray" />

    </LinearLayout>
</RelativeLayout>
